<launch>

 <!-- Map Server -->
<arg name="map_file" default="$(find my_robot)/maps/map.yaml"/>
<node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

<!-- AMCL Node -->
<node name="amcl" pkg="amcl" type="amcl" output="screen">
  <remap from="scan" to="/scan"/>
  <param name="odom_frame_id" value="odom"/>
  <param name="odom_model_type" value="diff-corrected"/>   <!-- THIS MIGHT CAUSE AN ERROR BECAUSE I AM USING A 4 WHEEL CAR -->
  <param name="base_frame_id" value="robot_footprint"/>
  <param name="global_frame_id" value="map"/>

  <!-- If you choose to define initial pose here -->
  <param name="initial_pose_x" value="-3.0"/>
  <param name="initial_pose_y" value="-1.5"/>
  
  <!-- Number of particles available -->
  <param name="min_particles"  value="100"/>
  <param name="max_particles"  value="500"/>

  <!-- Number of updates per Linear and angular movement -->
  <param name="update_min_d"  value="0.1"/>
  <param name="update_min_a"  value="0.025"/>
  
</node>

</launch>